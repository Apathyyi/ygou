<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="12"
        android:layout_height="0dp">
        <ScrollView
            android:id="@+id/info_backgroung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--头像部分-->
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior=".ui.recycler.TransLuncentBehavior">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="12dp"
                            android:text="&lt;返回"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="18sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人资料"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="8dp"
                            >

                        </androidx.appcompat.widget.AppCompatTextView>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_moe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="12dp"
                            android:text="更多"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>

                <!--    详细资料-->

                <!--        昵称-->
                <RelativeLayout
                    android:id="@+id/rl_contact_background"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@mipmap/icon_app">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="30dp"
                        android:text="沈怡"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/contact_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="30dp"
                        android:layout_toRightOf="@+id/contact_name"
                        android:text="{fa-female}"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="24sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/contact_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="10dp"
                        android:text="23岁"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/contact_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/contact_age"
                        android:text="中国"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <!--            账号-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/账号"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="账号"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="161637586"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/昵称"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="昵称"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_Nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="贝塔"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
                <!--备注-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/备注名"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="备注"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_notename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="耗儿屎"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
                <!--生日-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/生日"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="生日"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="10-9"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
                <!--  职业  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/职业"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="职业"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="学生"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
                <!--邮箱-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/邮箱"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="邮箱"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="161637586@qq.com"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/电话"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="电话"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="16163758688"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="4dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/地址"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:text="地址"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contact_adress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="16163758688"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


<LinearLayout
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp">
    <androidx.appcompat.widget.Toolbar
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="center"
                    android:id="@+id/contact_btn_phone"
                    android:background="@drawable/oval"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="打电话"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="center"
                    android:id="@+id/contact_btn_send"
                    android:background="@drawable/oval"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="发消息"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar
       >
</LinearLayout>



</LinearLayout>