<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp">
<!--   type -->
<!--     title -->
<!--     desc-->
<!--     count -->
<!--    double -->
<!--    contact -->
<!--    user_img -->

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="20dp"
            android:layout_width ="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="求购信息"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_weight="1"
        android:layout_width ="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="标题"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_title"
            android:layout_weight="2"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:text="标题"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="描述"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_desc"
            android:layout_weight="2"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:text="描述"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width ="0dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="类型"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_type"
            android:layout_weight="2"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:text="类型"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width ="0dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="价格"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_price"
            android:layout_weight="2"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:text="标题"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width ="0dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="数量"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_count"
            android:layout_weight="2"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:text="数量"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width ="0dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="联系"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_contact"
            android:layout_weight="2"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:text="联系"/>
    </LinearLayout>

    <LinearLayout
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_weight="1"
        android:layout_width ="0dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="时间"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/myBuy_time"
        android:layout_weight="2"
        android:layout_width ="0dp"
        android:layout_height="wrap_content"
        android:text="时间"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_delete"
            android:layout_weight="2"
            android:layout_width ="0dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="删除求购"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myBuy_edit"
            android:layout_weight="1"
            android:layout_width ="0dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="修改求购"/>
    </LinearLayout>

<View
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/app_background"/>

</LinearLayout>